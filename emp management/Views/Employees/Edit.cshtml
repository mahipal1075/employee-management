@* Edit.cshtml - Modern form to edit an existing employee *@
@model Employee
@{
    ViewData["Title"] = "Edit Employee";
}

<div class="page-header slide-in-left">
    <h2><i class="fas fa-user-edit me-3"></i>Edit Employee Details</h2>
    <p class="mb-0">Update the information for <strong>@Model.FirstName @Model.LastName</strong></p>
</div>

<div class="card-custom fade-in">
    <div class="card-body-custom">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>

        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="mb-3">
                        <label asp-for="FirstName" class="form-label">
                            <i class="fas fa-user me-2"></i>First Name
                        </label>
                        <input asp-for="FirstName" class="form-control" placeholder="Enter first name" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="col-md-4">
                    <div class="mb-3">
                        <label asp-for="MiddleName" class="form-label">
                            <i class="fas fa-user me-2"></i>Middle Name
                        </label>
                        <input asp-for="MiddleName" class="form-control" placeholder="Enter middle name (optional)" />
                        <span asp-validation-for="MiddleName" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="col-md-4">
                    <div class="mb-3">
                        <label asp-for="LastName" class="form-label">
                            <i class="fas fa-user me-2"></i>Last Name
                        </label>
                        <input asp-for="LastName" class="form-control" placeholder="Enter last name" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row g-4">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">
                            <i class="fas fa-envelope me-2"></i>Email Address
                        </label>
                        <input asp-for="Email" class="form-control" type="email" placeholder="example@company.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Phone" class="form-label">
                            <i class="fas fa-phone me-2"></i>Phone Number
                        </label>
                        <input asp-for="Phone" class="form-control" type="tel" placeholder="+1 (555) 123-4567" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Address" class="form-label">
                    <i class="fas fa-map-marker-alt me-2"></i>Address
                </label>
                <textarea asp-for="Address" class="form-control" rows="3" placeholder="Enter full address"></textarea>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="row g-4">
                <div class="col-md-4">
                    <div class="mb-3">
                        <label asp-for="Department" class="form-label">
                            <i class="fas fa-building me-2"></i>Department
                        </label>
                        <input asp-for="Department" class="form-control" placeholder="e.g., IT, HR, Sales" />
                        <span asp-validation-for="Department" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="col-md-4">
                    <div class="mb-3">
                        <label asp-for="Designation" class="form-label">
                            <i class="fas fa-briefcase me-2"></i>Designation
                        </label>
                        <input asp-for="Designation" class="form-control" placeholder="e.g., Manager, Developer" />
                        <span asp-validation-for="Designation" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="col-md-4">
                    <div class="mb-3">
                        <label asp-for="DateOfJoining" class="form-label">
                            <i class="fas fa-calendar-alt me-2"></i>Date of Joining
                        </label>
                        <input asp-for="DateOfJoining" class="form-control" type="date" />
                        <span asp-validation-for="DateOfJoining" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="mt-4 pt-3 border-top">
                <button type="submit" class="btn btn-primary me-2">
                    <i class="fas fa-save me-2"></i>Save Changes
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-times me-2"></i>Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
